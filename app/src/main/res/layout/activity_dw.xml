<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="430dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:background="#60000000"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".DwActivity">


    <ImageView
        android:id="@+id/iv_dw_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person_outline_24" />

    <TextView
        android:id="@+id/tv_dw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_dw_person"
        android:text="Booking Taken By"
        android:textAllCaps="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_cut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_close_24" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recyclerView_dw"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/tv_dw_title"
       android:layout_marginTop="20dp"/>
</RelativeLayout>